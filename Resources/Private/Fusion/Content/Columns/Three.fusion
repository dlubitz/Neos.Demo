##
# "ThreeColumn" element
#
prototype(Neos.Demo:Content.Columns.Three) < prototype(Neos.Neos:ContentComponent) {
    column0 = Neos.Neos:ContentCollection {
        nodePath = 'column0'
    }

    column1 = Neos.Neos:ContentCollection {
        nodePath = 'column1'
    }

    column2 = Neos.Neos:ContentCollection {
        nodePath = 'column2'
    }

    renderer = afx`
        <div class="row">
            <div class="col-sm-4">{props.column0}</div>
            <div class="col-sm-4">{props.column1}</div>
            <div class="col-sm-4">{props.column2}</div>
        </div>
    `
}

prototype(Neos.Demo:Content.Columns.Three.RawContentMode) < prototype(Neos.Neos:ContentComponent) {
    renderer = afx`
        <div style="display:grid; grid-template-columns: 1fr 1fr 1fr; grid-gap: 20px;">
            <div><Neos.Neos:RawContent.Node node={q(props.node).children('column0').get(0)} /></div>
            <div><Neos.Neos:RawContent.Node node={q(props.node).children('column1').get(0)} /></div>
            <div><Neos.Neos:RawContent.Node node={q(props.node).children('column2').get(0)} /></div>
        </div>
    `
}
